---
import { Image } from 'astro:assets'

const { author } = Astro.props
const { name, avatar, twitter, linkedIn, github, bio, subtitle } = author.data
---

<div
  class='max-w-lg mx-auto bg-white rounded-lg shadow-md p-5 flex flex-col justify-center items-center'
>
  <Image
    class='w-32 h-32 rounded-full mx-auto'
    src={avatar}
    alt='Profile picture'
    transition:name=`${author.id}-image`
  />
  <a
    href={`/blog/${author.id}`}
    class='text-2xl font-semibold mt-3 text-blue-500 hover:underline'>{name}</a
  >
  <p class='text-gray-600 mt-1'>{subtitle}</p>
  <div class='flex justify-center mt-5'>
    <a href={twitter} class='text-blue-500 hover:text-blue-700 mx-3'>Twitter</a>
    <a href={linkedIn} class='text-blue-500 hover:text-blue-700 mx-3'
      >LinkedIn</a
    >
    <a href={github} class='text-blue-500 hover:text-blue-700 mx-3'>GitHub</a>
  </div>
  <div class='mt-5'>
    <h3 class='text-xl font-semibold text-gray-800'>Bio</h3>
    <p class='text-gray-600 mt-2 text-pretty'>
      {bio}
    </p>
  </div>
  <a
    href=`/blog/${author.id}`
    class='text-black hover:underline mt-5 self-end mr-8'>Ver Blogs</a
  >
</div>
