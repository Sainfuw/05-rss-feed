---
import Formatter from '@/utils/formatter'
import Image from 'astro/components/Image.astro'
import type { CollectionEntry } from 'astro:content'

interface Props {
  post: CollectionEntry<'blog'>
}

const { post } = Astro.props
const { title, image, date } = post.data
---

<div class='rounded-lg m-4'>
  <Image
    class='object-cover rounded-lg aspect-[5/3] w-full'
    src={image}
    alt={title}
    quality={'low'}
    loading={'lazy'}
    transition:name={`${post.slug}-image`}
  />

  <div class='flex flex-col justify-between py-4 gap-2'>
    <a
      href={`/posts/${post.slug}`}
      class='text-xl font-semibold hover:underline text-white'
    >
      {title}
    </a>

    <span class='text-sm text-gray-300 text-balance'>
      {Formatter.formatDate(date)}
    </span>
  </div>
</div>
